<h2 class="mt-3">Current Logins</h2>
<% count = 0 %>
<% if @active_sessions.any? %>
  <%= button_to "Log out from everywhere", destroy_all_active_sessions_path, method: :delete, class: "btn btn-danger" %>
  <table class="table table-hover text-nowrap mt-4">
    <thead>
    <tr>
      <th scope="col">User Agent</th>
      <th scope="col">IP Address</th>
      <th scope="col">Signed In At</th>
      <th scope="col">Sign Out</th>
    </tr>
    </thead>
    <tbody>
    <%= render @active_sessions %>
    </tbody>
  </table>
<% end %>

