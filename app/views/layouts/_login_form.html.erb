<div class="form-floating mb-3">
  <%= form.email_field :email, required: true, class: "form-control form-control-lg", id: "email", placeholder: "email@domain" %>
  <%= form.label :email, 'Email', class: "form-label", for: "email"%>
</div>

<div class="form-floating mb-4">
  <%= form.password_field :password, required: true, class: "form-control form-control-lg", id: "password", placeholder: "password" %>
  <%= form.label :password, class: "form-label", for: "password"%>
</div>

<div class="d-flex justify-content-around align-items-center mb-4">
  <div class="form-check">
    <%= form.check_box :remember_me, class: "form-check-input", type: "checkbox", value: "", checked: true %>
    <%= form.label :remember_me, class: "form-check-label", for: "remember_me" %>
  </div>
  <a href="#!">Forgot password?</a>
</div>

<!-- Submit button -->
<button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>

<div class="divider d-flex align-items-center my-4">
  <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
</div>

<a class="btn btn-primary btn-lg btn-block" style="background-color: #3b5998" href="#!" role="button">
  <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
</a>

<a class="btn btn-primary btn-lg btn-block" style="background-color: #55acee" href="#!" role="button">
  <i class="fab fa-twitter me-2"></i>Continue with Twitter
</a>
